#include <iostream>
#include <vector>

using namespace std;

class Solution {
public:
    int rob(vector<int>& nums) {
        if(nums.size() == 0)
            return 0;
            
        vector<int> f(nums.size(), 0); 
        vector<int> g(nums.size(), 0); 
        int i;
        f[0] = nums[0];
        g[0] = 0;
        for(i=1; i<nums.size(); i++){
            
            f[i] = nums[i] + g[i-1];
           
            g[i] = f[i-1] > g[i-1] ? f[i-1] : g[i-1];
        }
        
        return f[i-1] > g[i-1] ? f[i-1] : g[i-1];
    }
};
